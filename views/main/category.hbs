<div style='padding: 2rem 4rem; display: flex; gap:40px;'>
  {{> category/filter}}
  <div class='text-center d-flex flex-column align-items-center' style='flex:1;'>
    <div id="book-cards-container" class='book-cards-container row'>
      {{#each books}}
        <div class="col-3 book-card">
          <a class="w-100" style="display: block;"href="/product/{{this._id}}">
            <div class="img-container" style="width: 100%;
                  padding-top: 150%;
                  position: relative">
              <div class="thumbnail" style="
                position: absolute;
                top: 0;
                left:0;
                right:0;
                bottom:0;
                  background-image: url('{{this.thumbnail}}');
                  background-size: cover;"></div>
              <div class="overlay fs-2">
                <i class="fa-solid fa-eye"></i>
              </div>
            </div>
            <div class="card-body text-start py-4 text-center">
              <p class="text-secondary m-0 text-uppercase">{{this.author_name}}</p>
              <h1 class="fs-3 header-font fw-bold">{{this.title}}</h1>
              <p class="text-secondary fs-5">${{this.price}}</p>
            </div>
          </a>
        </div>
      {{/each}}
    </div>

    <nav id="paginationWrapper" aria-label="...">
      <ul class="pagination">
        {{#loopTill totalPages}}
        <li class="page-item {{#ifEquals ../currentPage index}}active{{/ifEquals}}">
          <a class="page-link" style="cursor: pointer; " onclick="paging({{index}})">{{index}}</a>
        </li>
        {{/loopTill}}
      </ul>
    </nav>

  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>
<style>
  .img-container {
    position: relative;
    overflow: hidden;
  }
  .img-container .thumbnail {
    transition: all 0.4s ease-in-out;
  }

  .img-container:hover .thumbnail {
    transform: scale(1.1);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .overlay:hover {
    opacity: 1;
  }
  .page-item.active .page-link{
    background-color: var(--palette-02);
    border-color: var(--palette-02);
  }
  .page-link{
    color: var(--palette-02);
  }
  .page-link:hover{
    color: var(--palette-02);
  }
</style>
