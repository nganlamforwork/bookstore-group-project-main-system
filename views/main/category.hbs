<div style='padding: 2rem 4rem; display: flex; gap:40px;'>
  {{> category/filter}}
  <div class='text-center d-flex flex-column align-items-center' style='flex:1;'>
    <div id="book-cards-container" class='book-cards-container row' style='width: 100%;'>
      {{#each books}}
      <div class='col-3'>
        <div class='book-card-container'>
          <a href='/product/{{this._id}}'>

            <div class='img-container' style="width: 100%;
      padding-top: 150%;
      background-image: url('{{this.thumbnail}}');
      background-size: cover;">
            </div>
          </a>
          <div class='card-body text-center py-4'>
            <div style='overflow: hidden; text-overflow: ellipsis; white-space: nowrap; text-overflow: ellipsis;'>
              <a href='/product/{{this._id}}'>
                <h1 class='fs-4 header-font fw-bold'>{{this.title}}</h1>
              </a>
            </div>
            {{!-- <p class='text-secondary fs-5'>${{this.price}}</p> --}}
            <span class='text-secondary fs-5'>$</span>
            <span class='text-secondary fs-5'>{{this.price}}</span>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

    <nav id="paginationWrapper" aria-label="...">
      <ul class="pagination">
        {{#loopTill totalPages}}
        <li class="page-item {{#ifEquals ../currentPage index}}active{{/ifEquals}}">
          <a class="page-link" style="cursor: pointer;" onclick="paging({{index}})">{{index}}</a>
        </li>
        {{/loopTill}}
      </ul>
    </nav>

  </div>
</div>

<style>
  .tab-button {
    background-color: white;
    color: black !important;
    transition: all 0.4s ease-in-out;
  }

  .tab-button:hover {
    background-color: var(--palette-02) !important;
    color: white !important;
  }

  .tab-button.active {
    background-color:
      var(--palette-02) !important;
    color: white !important;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>