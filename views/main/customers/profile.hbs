<section>
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
              <a href="/">
                Home
              </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Profile
            </li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <div class="avatar-container" style="cursor: pointer" data-bs-toggle="modal" data-bs-target="#avatarModal">
              {{#if avatar}}
              <img src="{{avatar}}" alt="avatar" class="rounded-circle img-fluid avatar-image" />
              {{else}}
              <img src="https://icon-library.com/images/anonymous-avatar-icon/anonymous-avatar-icon-25.jpg" alt="avatar"
                class="rounded-circle img-fluid avatar-image" />
              {{/if}}
              {{#unless avatar}}
              <i class="fa-solid fa-camera-retro camera-icon"></i>
              {{/unless}}
            </div>
            <h5 class="mt-3">
              Welcome, {{first_name}}!
            </h5>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <a class="d-flex justify-content-between align-items-center w-100" type="button" data-bs-toggle="modal"
                  data-bs-target="#changePwModal">
                  <i class="fa-solid fa-lock text-warning"></i>
                  <p class="mb-0">
                    Change password
                  </p>
                </a>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <a href="/auth/logout" class="d-flex justify-content-between align-items-center w-100">
                  <i class="fa-solid fa-right-from-bracket text-danger"></i>
                  <p class="mb-0">
                    Logout
                  </p>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header d-flex justify-content-between align-items-center">
            <p class="header-font fw-bold fs-4 m-0" style="color: var(--palette-02)">
              Information
            </p>
            <a href="/profile/information">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Full Name
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{full_name}}
                </p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Email
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{email}}
                </p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Phone
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{phone}}
                </p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Default address
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{#if defaultAddress}}
                  {{defaultAddress.name}} </br>
                  {{defaultAddress.phone}} </br>
                  {{defaultAddress.address}} </br>
                  {{else}}
                  There is no default address
                  {{/if}}
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="card mb-4 mb-md-0">
          <div class="card-header d-flex justify-content-between align-items-center">
            <p class="header-font fw-bold fs-4 m-0" style="color: var(--palette-02)">
              Addresses Book
            </p>
            <a href="/profile/addresses">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
          </div>
          <div class="card-body text-center">
            <div class="text-center">
              {{#if defaultAddress}}
              <div class="flex d-flex gap-4 mb-3">
                <p class="text-start m-0 p-0 ">
                  <b>Default address:</b>
                </p>
                <div class=" m-0 p-0 text-start ">
                  {{defaultAddress.name}} </br>
                  {{defaultAddress.phone}} </br>
                  {{defaultAddress.address}} </br>
                </div>
              </div>

              <a role="button" class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                style="background-color: var(--palette-02);" href="/profile/addresses">
                Go to addresses book
              </a>
              {{else}}
              <p>
                You don't have any default addresses yet.
              </p>
              <a role="button" class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                style="background-color: var(--palette-02);" href="/profile/addresses">
                Add new default address
              </a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12 my-4">
        <div class="card mb-4 mb-md-0">
          <p class="card-header header-font fw-bold fs-4" style="color: var(--palette-02)">
            Orders History
          </p>
          {{#if orders.length}}
          <div class="table-responsive">
            <table class="table table-striped mt-2">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Book</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Total</th>
                  <th>Created</th>
                </tr>
              </thead>
              <tbody>
                {{#each orders}}
                <tr>
                  <td>{{inc @index}}</td>
                  <td>
                    {{#each products}}
                    <p>{{book.title}}</p>
                    {{/each}}
                  </td>
                  <td>
                    {{#each products}}
                    <p>{{quantity}}</p>
                    {{/each}}
                  </td>
                  <td>
                    {{#each products}}
                    <p>${{book.price}}</p>
                    {{/each}}
                  </td>
                  <td>${{subTotal}}</td>
                  <td>{{created_at}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          {{else}}
          <div class="text-center p-4">
            <p>
              You don't have any orders yet.
            </p>
            <a role="button" class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
              style="background-color: var(--palette-02);" href="/">
              Buy now
            </a>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{!-- Modal Avatar --}}
  <div class="modal fade" id="avatarModal">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Crop Image And Upload</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <!-- Modal body -->
        <div class="modal-body text-end">
          <form enctype="multipart/form-data" class="text-center">
            <div id="croppie-preview"></div>
            <button class="btn rotate float-lef" data-deg="90">
              <i class="fas fa-undo"></i>
            </button>
            <button class="btn rotate float-right" data-deg="-90">
              <i class="fas fa-redo"></i>
            </button>
            <div class="input-group my-3">
              <input type="file" accept="image/*" id="avatar-upload" name="avatar" class="form-control" />
            </div>
          </form>
          <hr>
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal"
            aria-label="Close">Cancel</button>
          <button class="btn text-light" id="upload" style="background-color: var(--palette-02)">
            Crop And Upload</button>
        </div>
      </div>
    </div>
  </div>
  </div>
  {{> customers/change-password}}
</section>
<style>
  .avatar-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
  }

  .avatar-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #ccc;
  }

  .avatar-input {
    display: none;
  }

  .avatar-label span {
    margin-top: 5px;
    color: #007bff;
    text-decoration: underline;
    cursor: pointer;
  }

  .avatar-container {
    position: relative;
    display: inline-block;
    width: 150px;
    height: 150px;
  }

  .camera-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 30px;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    padding: 10px;
    cursor: pointer;
    opacity: 0.5;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Check for error message and display toastr
    const error_str = '{{#if error}}{{error}}{{/if}}';
    const error = "{{error}}"
    if (error === "true") {
      toastr.error(error_str);
    }

    // Check for success message and display toastr
    const success_str = '{{#if success}}{{success}}{{/if}}';
    const success = "{{success}}"
    if (success === "true") {
      toastr.success(success_str);
    }

    const fileInput = document.getElementById('avatar-upload');

    $("#avatar-container").on("change", function (event) {
      $("#avatarModal").modal();
    });

    $("#avatar-upload").on("change", function (event) {
      const input = event.target;
      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function (e) {
          const imgSrc = e.target.result;
          const croppie = new Croppie(document.getElementById('croppie-preview'), {
            viewport: {
              width: 200,
              height: 200,
              type: 'circle'
            },
            boundary: {
              width: 250,
              height: 250
            },
            enableOrientation: true,
            enableResize: false,
            enableExif: true,
            url: imgSrc, // Set the image source for Croppie
          });
          $('#avatarModal').modal('show');

          croppie.bind({
            url: imgSrc,
          });

          $('.rotate').on('click', function (e) {
            e.preventDefault();
            const deg = $(this).data('deg');
            croppie.rotate(deg);
          });

          $('#upload').on('click', function () {
            croppie.result('blob').then(function (blob) {
              const formData = new FormData();
              const fileInput = document.getElementById('avatar-upload');
              const fileName = fileInput.files[0].name;
              formData.append('avatar', blob, fileName);
              // AJAX upload to the server
              $.ajax({
                url: `/auth/{{_id}}/profile/avatar`,
                method: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                  console.log('Upload successful');
                  window.location.reload();
                },
                error: function (error) {
                  console.error('Error uploading', error);
                }
              });
            });
          });
        };
        reader.readAsDataURL(input.files[0]);
      }
    });

    function hideCardNumber(cardNumber) {
      // Check if the cardNumber is provided and has at least 4 characters
      if (cardNumber && cardNumber.length >= 4) {
        const visibleDigits = 4; // Number of visible digits at the end
        const maskedPart = '*'.repeat(cardNumber.length - visibleDigits);
        const visiblePart = cardNumber.slice(-visibleDigits);
        return maskedPart + visiblePart;
      }
      return '****'; // Return default masking if card number is not provided or too short
    }

    $("#changePaymentMethod").on('click', () => {
      toastr.error("Cannot be changed within 7 days");
    });
  });
</script>