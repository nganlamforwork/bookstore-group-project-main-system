<div
  style='padding: 4rem 10rem;'
  class='text-center d-flex flex-column align-items-center'
>
  <h1 class='text-uppercase mb-4 fw-bold header-font fs-2'>Related Product</h1>

  <div class='row w-100'>
    {{#each relatedBooks}}
        <div class="col-3 book-card">
          <a class="w-100" style="display: block;"href="/product/{{this._id}}">
            <div class="img-container" style="width: 100%;
                  padding-top: 150%;
                  position: relative">
              <div class="thumbnail" style="
                position: absolute;
                top: 0;
                left:0;
                right:0;
                bottom:0;
                  background-image: url('{{this.thumbnail}}');
                  background-size: cover;"></div>
              <div class="overlay fs-2">
                <i class="fa-solid fa-eye"></i>
              </div>
            </div>
            <div class="card-body text-start py-4 text-center">
              <p class="text-secondary m-0 text-uppercase">{{this.author_name}}</p>
              <h1 class="fs-3 header-font fw-bold">{{this.title}}</h1>
              <p class="text-secondary fs-5">${{this.price}}</p>
            </div>
          </a>
        </div>
    {{/each}}
  </div>
</div>

<style>
  .img-container {
    position: relative;
    overflow: hidden;
  }

  .img-container .thumbnail {
    transition: all 0.4s ease-in-out;
  }

  .img-container:hover .thumbnail {
    transform: scale(1.1);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .overlay:hover {
    opacity: 1;
  }
</style>