<form id="filter-form" onsubmit="handleFilter(event)" style="width:300px;">
  <div style="display: flex; flex-direction: column; gap:16px;">
    <div class="filter_type_wrapper flex d-flex flex-column">
      <span class="fw-bold header-font fs-5">Sort By</span>
      <select class="form-select" name="sortBy">
        <option value="" disabled selected>None</option>
        <option value="price-asc">Price (ASC)</option>
        <option value="price-desc">Price (DESC)</option>
        <option value="name-asc">Name (ASC)</option>
        <option value="name-desc">Name (DESC)</option>
      </select>
    </div>
    <div class="filter_type_wrapper">
      <span class="fw-bold header-font fs-5">Price</span>
      <div style="display: flex; gap:8px; align-items: center;">
        <span>$</span>
        <div class="w-100 flex d-flex gap-1 justify-content-start align-items-center">
          <input class="price_input" id="minPrice" name="minPrice" type="number" placeholder="Min price" />
          <i class="fa-solid fa-minus"></i>
          <input class="price_input" id="maxPrice" name="maxPrice" type="number" placeholder="Max price" />
        </div>
      </div>
    </div>
    {{#if categories}}
    <div class="filter_type_wrapper">
      <span class="fw-bold header-font fs-5">Categories</span>
      <div style="display: flex; flex-direction: column;">
        {{#each categories}}
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" id="{{this._id}}" name="category" value="{{this._id}}" />
          <label class="form-check-label" for="{{this._id}}">{{this.title}}</label>
        </div>
        {{/each}}
      </div>
    </div>
    {{else}}
    <input class="form-check-input" type="hidden" id="{{currentCategory}}" name="category"
      value="{{currentCategory}}" />
    {{/if}}

    <button class="btn btn-primary rounded-0 border-0"
      style="background-color: var(--palette-02); padding: 0.75rem 2rem;" type="submit">Filter</button>
  </div>
</form>

<style>
  .price_input {
    width: 130px;
    height: 2rem;
    flex: 1;
    text-indent: 4px;
  }

  .filter_type_wrapper {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
</style>

<script src="/js/category.js"></script>