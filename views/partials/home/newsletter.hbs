<div
  style="padding: 30px 0; background-color: var(--gradient-base-background-2);"
  class="d-flex align-items-center justify-content-center flex-column"
>
  <div
    id="newsletter-heading"
    style="margin: 1.8rem 0; margin-bottom: 2.8rem; color: var(--palette-01)"
  >
    <h2>SUBSCRIBE TO OUR NEWS LETTER</h2>
  </div>
  <div>
    <p id="newsletter-subheading">Enter your email address to receive regular
      updates, as well as news on upcoming events and specific offers.
    </p>
  </div>
  <div style="margin-top: 20px;" class="w-50">
    <form action="/subscriber/add" method="POST">
      <div class="d-flex flex-row">
        <input
          type="text"
          name="email"
          placeholder="Email Address"
          class="border-danger px-3 w-100"
        />
        <button
          type="submit"
          style="padding: 0 45px; background-color: var(--dark-footer-background); font-size: 1rem; height: 3rem; line-height: 3rem;"
          class="text-light text-center border-0"
        >
          Subscribe</button>
      </div>
    </form>
  </div>
</div>