<section>
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profile</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img
              src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
              alt="avatar"
              class="rounded-circle img-fluid"
              style="width: 150px;"
            />
            <h5 class="mt-3">Welcome, {{first_name}}!</h5>

          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li
                class="list-group-item d-flex justify-content-between align-items-center p-3"
              >
                <a
                  href="/auth/signout"
                  class="d-flex justify-content-between align-items-center w-100"
                >
                  <i class="fa-solid fa-right-from-bracket text-danger"></i>
                  <p class="mb-0">Logout</p>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div
            class="card-header d-flex justify-content-between align-items-center"
          >
            <p
              class="header-font fw-bold fs-4 m-0"
              style="color: var(--palette-02)"
            >
              Information
            </p>
            <a href="/auth/profile/information"><i
                class="fa-solid fa-pen-to-square"
              ></i></a>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{full_name}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{email}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{phone}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Default address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{default_address}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Default payment</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{default_payment}}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col-md-12">
            <div class="card mb-4 mb-md-0">
              <p
                class="card-header header-font fw-bold fs-4"
                style="color: var(--palette-02)"
              >
                Orders History
              </p>
              <div class="card-body">
                <div class="text-center">
                  <p>You don't have any orders yet.</p>
                  <a
                    role="button"
                    class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                    style="background-color: var(--palette-02);"
                    href="/"
                  >Buy now</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div
                class="card-header d-flex justify-content-between align-items-center"
              >
                <p
                  class="header-font fw-bold fs-4 m-0"
                  style="color: var(--palette-02)"
                >
                  Payment Methods
                </p>
                <a href="/auth/profile/payments"><i
                    class="fa-solid fa-pen-to-square"
                  ></i></a>
              </div>
              <div class="card-body">
                <div class="text-center">
                  <p>You don't have any payment methods yet.</p>
                  <a
                    role="button"
                    class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                    style="background-color: var(--palette-02);"
                    href="/auth/profile/payments"
                  >Add new payment methods</a>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div
                class="card-header d-flex justify-content-between align-items-center"
              >
                <p
                  class="header-font fw-bold fs-4 m-0"
                  style="color: var(--palette-02)"
                >
                  Addresses Book
                </p>
                <a href="/auth/profile/addresses"><i
                    class="fa-solid fa-pen-to-square"
                  ></i></a>
              </div>
              <div class="card-body text-center">
                <div class="text-center">
                  <p>You don't have any addresses yet.</p>
                  <a
                    role="button"
                    class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                    style="background-color: var(--palette-02);"
                    href="/auth/profile/addresses"
                  >Add new address</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>