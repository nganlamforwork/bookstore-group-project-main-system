<script>
  const fetchSubscribers = () => {
    return $.ajax({
      url: '/subscriber/getAll',
      method: 'GET',
      dataType: 'json'
    });
  };

  fetchSubscribers()
    .then(function (data) {
      console.log('Received data:', data);

      // Process the received data
      const dateCounts = {};
      data.forEach(subscriber => {
        const date = new Date(subscriber.created_at).toLocaleDateString();
        if (!dateCounts[date]) {
          dateCounts[date] = 0;
        }
        dateCounts[date]++;
      });

      const dates = Object.keys(dateCounts);
      const subscribersCount = Object.values(dateCounts);

      // Get the canvas element where the chart will be rendered
      const ctx = document.getElementById('subscriptionChart').getContext('2d');

      // Create the chart
      const subscriptionChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: dates,
          datasets: [{
            label: 'Subscribers',
            data: subscribersCount,
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    })
    .fail(function (xhr, textStatus, errorThrown) {
      console.error('There was a problem with the fetch operation:', errorThrown);
    });
</script>