<section>
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
              <a href="/">
                Home
              </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Profile
            </li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <form action="/auth/{{_id}}/profile/avatar" enctype="multipart/form-data" method="POST">
              <label for="avatar-upload" class="avatar-label">
                <div class="avatar-container">
                  {{#if avatar}}
                  <img src="{{avatar}}" alt="avatar" class="rounded-circle img-fluid avatar-image" />
                  {{else}}
                  <img src="https://icon-library.com/images/anonymous-avatar-icon/anonymous-avatar-icon-25.jpg"
                    alt="avatar" class="rounded-circle img-fluid avatar-image" />
                  {{/if}}
                  {{#unless avatar}}
                  <i class="fa-solid fa-camera-retro camera-icon"></i>
                  {{/unless}}
                </div>
                <input type="file" accept="image/*" id="avatar-upload" name="avatar" class="avatar-input" />
              </label>
            </form>
            <h5 class="mt-3">
              Welcome, {{first_name}}!
            </h5>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <a class="d-flex justify-content-between align-items-center w-100" type="button" data-bs-toggle="modal"
                  data-bs-target="#changePwModal">
                  <i class="fa-solid fa-lock text-warning"></i>
                  <p class="mb-0">
                    Change password
                  </p>
                </a>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <a href="/auth/logout" class="d-flex justify-content-between align-items-center w-100">
                  <i class="fa-solid fa-right-from-bracket text-danger"></i>
                  <p class="mb-0">
                    Logout
                  </p>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header d-flex justify-content-between align-items-center">
            <p class="header-font fw-bold fs-4 m-0" style="color: var(--palette-02)">
              Information
            </p>
            <a href="/auth/profile/information">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Full Name
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{full_name}}
                </p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Email
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{email}}
                </p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Phone
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{phone}}
                </p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Default address
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{#if defaultAddress}}
                    {{defaultAddress.name}} </br>
                    {{defaultAddress.phone}} </br>
                    {{defaultAddress.address}} </br>
                  {{else}}
                    There is no default address
                  {{/if}}
                </p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">
                  Default payment
                </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  {{#if defaultPayment}}
                    {{defaultPayment.name}} </br>
                    {{defaultPayment.type}} </br>
                    {{defaultPayment.number}} </br>
                  {{else}}
                    There is no default payment method
                  {{/if}}
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col-md-12">
            <div class="card mb-4 mb-md-0">
              <p class="card-header header-font fw-bold fs-4" style="color: var(--palette-02)">
                Orders History
              </p>
              <div class="card-body">
                <div class="text-center">
                  <p>
                    You don't have any orders yet.
                  </p>
                  <a role="button" class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                    style="background-color: var(--palette-02);" href="/">
                    Buy now
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-header d-flex justify-content-between align-items-center">
                <p class="header-font fw-bold fs-4 m-0" style="color: var(--palette-02)">
                  Payment Methods
                </p>
                <a href="/auth/profile/payments">
                  <i class="fa-solid fa-pen-to-square"></i>
                </a>
              </div>
              <div class="card-body">
                <div class="text-center">
                  <p>
                    You don't have any payment methods yet.
                  </p>
                  <a role="button" class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                    style="background-color: var(--palette-02);" href="/auth/profile/payments">
                    Add new payment methods
                  </a>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-header d-flex justify-content-between align-items-center">
                <p class="header-font fw-bold fs-4 m-0" style="color: var(--palette-02)">
                  Addresses Book
                </p>
                <a href="/auth/profile/addresses">
                  <i class="fa-solid fa-pen-to-square"></i>
                </a>
              </div>
              <div class="card-body text-center">
                <div class="text-center">

                  {{#if defaultAddress}}
                    <div class="flex d-flex gap-4 mb-3">
                      <p class="text-start m-0 p-0 ">
                        <b>Default address:</b>
                      </p>
                      <div class=" m-0 p-0 text-start ">
                        {{defaultAddress.name}} </br>
                        {{defaultAddress.phone}} </br>
                        {{defaultAddress.address}} </br>
                      </div>
                    </div>
                    
                    <a role="button" class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                      style="background-color: var(--palette-02);" href="/auth/profile/addresses">
                      Go to addresses book
                    </a>
                  {{else}}
                    <p>
                      You don't have any default addresses yet.
                    </p>
                    <a role="button" class="btn btn-primary btn-login w-10 m-auto px-4 border-0"
                      style="background-color: var(--palette-02);" href="/auth/profile/addresses">
                      Add new default address
                    </a>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{> customers/change-password}}
</section>
<style>
  .avatar-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
  }

  .avatar-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #ccc;
  }

  .avatar-input {
    display: none;
  }

  .avatar-label span {
    margin-top: 5px;
    color: #007bff;
    text-decoration: underline;
    cursor: pointer;
  }

  .avatar-container {
    position: relative;
    display: inline-block;
    width: 150px;
    height: 150px;
  }

  .camera-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 30px;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    padding: 10px;
    cursor: pointer;
    opacity: 0.5;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Check for error message and display toastr
    const error = '{{#if error}}{{error}}{{/if}}';
    if (error) {
      toastr.error(error);
    }

    // Check for success message and display toastr
    const success = '{{#if success}}{{success}}{{/if}}';
    if (success) {
      toastr.success(success);
    }

    const fileInput = document.getElementById('avatar-upload');

    fileInput.addEventListener('change', function () {
      const file = this.files[0];
      const formData = new FormData();
      formData.append('avatar', file);

      fetch(`/auth/{{_id}}/profile/avatar`, {
        method: 'POST',
        body: formData
      })
        .then(response => {
          // Handle the response here
          console.log('File uploaded:', response);
          window.location.reload();
        })
        .catch(error => {
          // Handle any errors here
          console.error('Error uploading file:', error);
        });
    });

  });
</script>