<section>
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
              <a href="/">
                Home
              </a>
            </li>
            <li class="breadcrumb-item">
              <a href="/auth/profile">
                Profile
              </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              {{title}}
            </li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="d-flex flex justify-content-between align-items-start mb-2">
      <h1 class="header-font" style="color: var(--palette-02)">
        Addresses Book
      </h1>
      <button
        type="button"
        class="btn btn-primary btn-login border-0"
        style="background-color: var(--palette-02);"
        data-bs-toggle="modal"
        data-bs-target="#addModal"
      >
        <i class="fa-solid fa-plus"></i>
        Add new address
      </button>
    </div>
    <div class="card mb-4">
      <ul class="list-group">
        {{#each addresses}}
          <form
            action="/auth/profile/addresses/{{_id}}/{{this._id}}/delete"
            method="POST"
          >
            <li class="list-group-item" style="position: relative;">
              {{#if this.default}}
                <p
                  class="btn btn-outline-secondary mb-1"
                  role="button"
                  style="border-radius: 999px;"
                >
                  Default
                </p>
              {{/if}}
              <div class="row">
                <div class="col-sm-2">
                  <p class="mb-0">
                    Name
                  </p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">
                    {{this.name}}
                  </p>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-2">
                  <p class="mb-0">
                    Phone
                  </p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">
                    {{this.phone}}
                  </p>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-2">
                  <p class="mb-0">
                    Address
                  </p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">
                    {{this.address}}
                  </p>
                </div>
              </div>

              <div class="flex d-flex gap-1"
                style="position: absolute; top: 16px; right: 16px;">
                <button
                  type="button"
                  class="btn btn-outline-secondary"
                  data-bs-toggle="modal"
                  data-bs-target="#updateModal{{this._id}}"
                ><i class="fa-solid fa-pen-to-square"></i>
                </button>
                <button
                  type="submit"
                  class="btn btn-outline-danger"
                  {{#if this.default}}
                      disabled=true
                  {{/if}}
                >
                  <i class="fa-solid fa-trash"></i>
                </button>
              </div>
              
            </li>
          </form>
        {{/each}}
      </ul>
    </div>
  </div>
</section>

<div
  class="modal fade"
  id="addModal"
  tabindex="-1"
  aria-labelledby="addModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="addModalLabel">
          Add new address
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/auth/profile/addresses/{{_id}}/add" method="POST">
        <div class="modal-body">
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="nameInput"
              placeholder="Name"
              name="name"
            />
            <label for="nameInput">
              Name
            </label>
          </div>
          <div class="form-floating mb-3">
            <input
              type="tel"
              class="form-control"
              id="phoneInput"
              placeholder="Phone"
              name="phone"
            />
            <label for="phoneInput">
              Phone
            </label>
          </div>
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="addressInput"
              placeholder="Address"
              name="address"
            />
            <label for="addressInput">
              Address
            </label>
          </div>
          <div class="form-check mb-3">
            <input
              class="form-check-input"
              type="checkbox"
              id="checkbox"
              name="defaultAddress"
            />
            <label class="form-check-label" for="checkbox">
              Default Address?
            </label>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="submit"
            class="btn btn-primary border-0"
            style="background-color: var(--palette-02);"
          >
            Add
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


{{#each addresses}}
    <div
      class="modal fade"
      id="updateModal{{this._id}}"
      tabindex="-1"
      aria-labelledby="updateModal{{this._id}}Label"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="updateModal{{this._id}}Label">
              Update address
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <form
            action="/auth/profile/addresses/{{this.customer_id}}/{{this._id}}/update"
            method="POST"
          >
            <div class="modal-body">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="nameInput"
                  placeholder="Name"
                  name="name"
                  value="{{this.name}}"
                />
                <label for="nameInput">
                  Name
                </label>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="tel"
                  class="form-control"
                  id="phoneInput"
                  placeholder="Phone"
                  name="phone"
                  value="{{this.phone}}"
                />
                <label for="phoneInput">
                  Phone
                </label>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="addressInput"
                  placeholder="Address"
                  name="address"
                  value="{{this.address}}"
                />
                <label for="addressInput">
                  Address
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="checkbox"
                  name="defaultAddress"
                  {{#if this.default}}checked{{/if}}
                />
                <label class="form-check-label" for="checkbox">
                  Default Address?
                </label>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button
                type="submit"
                class="btn btn-primary border-0"
                style="background-color: var(--palette-02);"
              >
                Update
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
{{/each}}